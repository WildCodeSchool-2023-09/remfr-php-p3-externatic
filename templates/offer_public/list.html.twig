{% extends 'base.html.twig' %}

{% block title %}Offres
{% endblock %}

{% block body %}
	<div>
		<h1 class="text-primary">
			Nos offres:
		</h1>
	</div>

	<div class="container mt-4">
		<div class="row">
			{% for offer in offers %}
				<div class="col-4">
					<div class="card border-secondary mb-3" style="max-width: 18rem;">
						<div class="card-header">{{ offer.name }}</div>

						<div class="card-body text-secondary">
							<p class="card-text">
								<i class="bi bi-building"></i>
								{{ offer.company.name }}
							</p>
							<h6 class="card-title">
								<i class="bi bi-geo-alt"></i>
								{{ offer.assignment }}
							</h6>
							<p class="card-text">
								<i class="bi bi-currency-exchange"></i>
								{{ offer.minSalary }}
								à
								{{ offer.maxSalary }}
								€ annuel brut
							</p>
							<a href="{{ path('offer_public_detail', {'id': offer.id}) }}" class="btn btn-primary">Visualiser l'offre</a>
						</div>

					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
