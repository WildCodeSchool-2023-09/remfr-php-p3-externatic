{% extends 'base.html.twig' %}

{% block title %}Offer
{% endblock %}

{% block body %}
<div class="container-sm form-container-wide shadow">	
    <h1>Offre <a href="{{ path('offer_edit', {'id': offer.id}) }}"><i class="bi bi-pencil-square"></i></a></h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ offer.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Assignée</th>
                <td>{{ offer.assignment }}</td>
            </tr>
            <tr>
                <th>Collaborateur</th>
                <td>{{ offer.collaborator }}</td>
            </tr>
        </tbody>
    </table>
    </br>
    <a href="{{ path('offer_index') }}" style="margin-top:2rem">Retour à la liste des offres</a>
    {{ include('offer/_delete_form.html.twig') }}
</div>
{% endblock %}
