{% extends 'base.html.twig' %}

{% block title %}Offer
{% endblock %}

{% block body %}
<div class="container-sm form-container-wide shadow">	
    <h1>Offre</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ offer.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Assignée</th>
                <td>{{ offer.assignment }}</td>
            </tr>
            <tr>
                <th>Collaborateur</th>
                <td>{{ offer.collaborator }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index') }}">Retour à la liste des offres</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">Editer l'offre</a>

    {{ include('offer/_delete_form.html.twig') }}
</div>
{% endblock %}
