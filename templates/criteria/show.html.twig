{% extends 'base.html.twig' %}

{% block title %}Criteria{% endblock %}

{% block body %}
    <h1>Mes critères</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ criterion.id }}</td>
            </tr>
            <tr>
                <th>Salaires</th>
                <td>{{ criterion.salary }}</td>
            </tr>
            <tr>
                <th>Profil</th>
                <td>{{ criterion.profil }}</td>
            </tr>
            <tr>
                <th>Type de contrat</th>
                <td>{{ criterion.contract }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ criterion.location }}</td>
            </tr>
            <tr>
                <th>Télétravail</th>
                <td>{{ criterion.remote }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('criteria_index') }}">Retour à la liste des critères</a>

    <a href="{{ path('criteria_edit', {'id': criterion.id}) }}">Modifier mes critères</a>

    {{ include('criteria/_delete_form.html.twig') }}
{% endblock %}
