{% extends 'base.html.twig' %}

{% block title %}Criteria index{% endblock %}

{% block body %}
<div class="container-sm form-container-wide shadow">	
    <h1 class="titre-form1">Mes critères de recherche</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Salaire</th>
                <th>Profil</th>
                <th>Type de contrat</th>
                <th>Localisation</th>
                <th>Télétravail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for criterion in criterias %}
            <tr>
                <td>{{ criterion.salary }}</td>
                <td>{{ criterion.profil }}</td>
                <td>{{ criterion.getContractTypeLabel() }}</td>
                <td>{{ criterion.location }}</td>
                <td>{{ criterion.getRemoteStatusLabel() }}</td>
                <td class="actions">
                    <a href="{{ path('criteria_edit', {'id': criterion.id}) }}">
                    <i class="bi bi-pencil-square"></i></a>
                    {{ include('criteria/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun critère enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('criteria_new') }}" class="btn btn-lg btn-primary submit-form" style="margin-top:1rem" >Créer des nouveaux critères</a>
</div>
{% endblock %}
