{% extends 'base.html.twig' %}

{% block title %}Company index
{% endblock %}

{% block body %}
<main class="main_home">
	<div class="container-sm form-container-wide shadow">	
		<h1>Liste des entreprises</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Domaine</th>
					<th>Adresse</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for company in companies %}
					<tr>
						<td>{{ company.id }}</td>
						<td>{{ company.name }}</td>
						<td>{{ company.field }}</td>
						<td>{{ company.address }}</td>
						<td>
							<a href="{{ path('company_edit', {'id': company.id}) }}"><i class="bi bi-pencil-square"></i></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-lg btn-primary submit-form" style="margin-top:1rem" href="{{ path('company_new') }}">Cr√©er une nouvelle fiche entreprise</a>
		<p class="text-center">
			<a href="{{ path('admin_dashboard') }}" class="btn btn-link" style="margin-top:1rem" >Retour au dashboard admin</a>
		</p>
	</div>
</main>
{% endblock %}
