{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="container-sm form-container-wide shadow"> 
    <h1>Réinitialiser mon mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuillez saisir votre adresse e-mail afin de 
                recevoir un lien de réinialisation de votre mot de passe.
            </small>
        </div>
        <button class="btn btn-lg btn-primary submit-form" style="margin-top:1rem">Envoi</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
