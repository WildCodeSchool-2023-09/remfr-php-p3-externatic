{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}
<div class="container-sm form-container">
		<h1>Connexion</h1>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post" class="form-style">
			<div class="row mb-3">
				<label for="username" class="col-sm-2 col-form-label">Email</label>
				<div class="col-sm-10">
					<input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}">
				</div>
			</div>
			<div class="row mb-3">
				<label for="password" class="col-sm-2 col-form-label">Mot de passe</label>
				<div class="col-sm-10">
					<input type="password" id="password" name="_password">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
			</div>
			{# If you want to control the URL the user is redirected to on success
							<input type="hidden" name="_target_path" value="/account"> #}

			<button type="submit" class="btn btn-primary" style="margin-top:2rem">login</button>
		</form>
	</div>
</div>
{% endblock %}
