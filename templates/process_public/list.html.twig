{% extends 'base.html.twig' %}

{% block title %}Mes Process
{% endblock %}

{% block body %}
	<main class="main_home">
		<div class="container-sm form-container-wide shadow">
			<h1>Mes Process en cours</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Entreprise</th>
						<th>Process en cours</th>
						<th>Statut</th>
						<th>Consultant</th>
						<th>Modifier</th>
						<th>Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for process in processes %}
						<tr>
							<td>{{ process.offer.company.name }}</td>
							<td>{{ process.processName }}</td>
							<td>{{ process.statutName }}</td>
							<td>{{ process.collaborateur.firstname }}
								{{ process.collaborateur.lastname }}</td>
							<td>
								<a href="{{ path('process_public_edit', {'id': process.id}) }}">
									<i class="bi bi-pencil-square"></i>
								</a>
							</td>
							<td>
								<a href="{{ path('process_public_delete', {'id': process.id}) }}">
									<i class="bi bi-trash3"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<p class="text-center">
				<a href="{{ path('user_dashboard') }}" class="btn btn-link" style="margin-top:1rem" >Retour au dashboard</a>
			</p>
		</div>
	</main>
{% endblock %}
