{% extends 'base.html.twig' %}

{% block title %}Process index
{% endblock %}

{% block body %}
<main class="main_home">  	
	<div class="container-sm form-container-wide shadow">	
		<h1 class="title1">Gestion des process en cours</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Email</th>
					<th>Entreprise</th>
					<th>Process en cours</th>
					<th>Statut</th>
					<th>Consultant</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for process in processes %}
					<tr>
						<td>{{ process.user.lastname }}</td>
						<td>{{ process.user.firstname }}</td>
						<td>{{ process.user.email }}</td>
						<td>{{ process.offer.company.name }}</td>
						<td>{{ process.processName }}</td>
						<td>{{ process.statutName }}</td>
						<td>{{ process.collaborateur.firstname }}
							{{ process.collaborateur.lastname }}</td>
						<td>
							<a href="{{ path('process_edit', {'id': process.id}) }}">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a href="{{ path('process_delete', {'id': process.id}) }}">
								<i class="bi bi-trash3"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	<a class="btn btn-lg btn-primary submit-form" style="margin-top:1rem" href="{{ path('process_new') }}">Créer un nouveau process</a>
	</div>
</main>
{% endblock %}
