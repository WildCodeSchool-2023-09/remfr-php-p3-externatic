{% extends 'base.html.twig' %}

{% block title %}Process index
{% endblock %}

{% block body %}
	<h1>Process index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Pr√©nom</th>
				<th>Email</th>
				<th>Entreprise</th>
				<th>Process en cours</th>
				<th>Statut</th>
				<th>Consultant</th>
				<th>Modifier</th>
				<th>Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for process in processes %}
				<tr>
					<td>{{ process.user.lastname }}</td>
					<td>{{ process.user.firstname }}</td>
					<td>{{ process.user.email }}</td>
					<td>{{ process.offer.company.name }}</td>
					<td>{{ process.processName }}</td>
					<td>{{ process.statutName }}</td>
					<td>{{ process.collaborateur.firstname }}
						{{ process.collaborateur.lastname }}</td>
					<td>
						<a href="{{ path('process_edit', {'id': process.id}) }}">
							<i class="bi bi-pencil-square"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('process_delete', {'id': process.id}) }}">
							<i class="bi bi-trash3"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('process_new') }}">Create new</a>
{% endblock %}
